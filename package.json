{
  "name": "universal-demo",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "start": "run-s build:server build:browser:dev watch:dev",
    "watch:dev": "run-p build:browser:dev:watch build:server:watch server:dev",
    "start:prod": "run-s build:server build:browser:prod server:prod",
    "build:server": "webpack --env=server",
    "build:server:watch": "webpack --watch --env=server",
    "build:browser:dev": "webpack --env=browser:dev",
    "build:browser:dev:watch": "webpack --watch --env=browser:dev",
    "build:browser:prod": "webpack --env=browser:prod",
    "server:dev": "nodemon -w dist/server.js -w dist/public/index.html dist/server.js",
    "server:prod": "node dist/server.js"
  },
  "dependencies": {
    "@angular/animations": "^4.1.2",
    "@angular/common": "^4.1.2",
    "@angular/compiler": "^4.1.2",
    "@angular/core": "^4.1.2",
    "@angular/forms": "^4.1.2",
    "@angular/http": "^4.1.2",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "@angular/platform-server": "^4.1.2",
    "@angular/router": "^4.1.2",
    "bootstrap": "next",
    "core-js": "^2.4.1",
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "rxjs": "^5.4.0",
    "zone.js": "^0.8.10"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.1.2",
    "@ngtools/webpack": "^1.3.1",
    "@types/express": "^4.0.35",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.1",
    "exports-loader": "^0.6.4",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.5",
    "ts-loader": "^2.0.3",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-node-externals": "^1.6.0"
  }
}
